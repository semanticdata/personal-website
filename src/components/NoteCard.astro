---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry:
    | CollectionEntry<"blog">
    | CollectionEntry<"projects">
    | CollectionEntry<"tutorials">
    | CollectionEntry<"notes">;
};

const { entry } = Astro.props as {
  entry:
    | CollectionEntry<"blog">
    | CollectionEntry<"projects">
    | CollectionEntry<"tutorials">
    | CollectionEntry<"notes">;
};
---

<a
  href={`/${entry.collection}/${entry.slug}`}
  class="not-prose group relative flex h-48 flex-col items-start justify-between rounded-lg border border-black/15 px-4 py-3 transition-colors duration-300 ease-in-out hover:bg-black/5 hover:text-black focus-visible:bg-black/5 focus-visible:text-black dark:border-white/20 dark:hover:bg-white/5 dark:hover:text-white dark:focus-visible:bg-white/5 dark:focus-visible:text-white"
>
  <div class="flex flex-1 flex-col space-y-2">
    <div class="font-semibold">
      {entry.data.title}
    </div>
    <div class="line-clamp-6 text-sm">
      {entry.data.description}
    </div>
  </div>
</a>
